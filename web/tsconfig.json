{
  "extends": "@utrack/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "core/*"
      ],
      "@/helpers/*": [
        "helpers/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/utrack-web/*": [
        "ce/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "jsx": "preserve",
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
